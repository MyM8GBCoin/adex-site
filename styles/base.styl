/* Aligns */
.text-center
    text-align center
.text-left
    text-align left
.text-right
    text-align right

/* Forms & inputs */
fieldset
    border 0
    padding 0
    margin 0
    legend
        margin-bottom 30px

input, textarea
    border 0
    padding 15px
    max-width 410px
    background rgba(#fff, 0.1)
    box-sizing content-box
input[type="submit"]
    padding-top 20px
    padding-bottom 20px
    background $BKG_DEFAULT
    text-align center
    color #fff
    text-transform uppercase
    transition opacity 0.2s ease-in-out
    cursor pointer
    &:hover
        opacity 0.7

.form-group
    margin-bottom 15px
    input, textarea
        width calc(100% - 30px)
    textarea
        min-height 120px

/* Nav */
nav
    ul			
        padding 0
        list-style-type none
        max-width 440px		
        li 
            display inline-block
            vertical-align top
            opacity 0.9
            &:not(:first-child)
                margin-left 15px
            a
                font-size 0.9em
                display block
                width 100%
                height 100%
                text-transform uppercase
            &.lang
                color $BKG_DEFAULT
                margin-left 10px
                &.first
                    padding-left 8px
                    border-left 1px solid #fff
                    border-left-color $BKG_DEFAULT
                    margin-left 15px
            .sub
                font-size 0.7em
                opacity 0.5
                cursor default

#cb-show-hide-modal
    display none
    &:checked
        & ~ #ethereum-address-modal
            display block !important

#ethereum-address-modal
    display none

#ethereum-address
    input[type="checkbox"]
        display none
    label 
        display block
        .box
            cursor pointer
            display inline-block
            vertical-align bottom
            margin-right 15px
            margin-left 5px
            width 16px
            height 16px
            box-sizing border-box
            border 4px solid #dbdbdb
            transform rotate(45deg)
            transform-origin 50% 50%

    #ethereum-address-adr, #to-accept-msg
        transition max-height 0s, opacity 0.5s ease-in-out
        overflow hidden
        backface-visibility hidden
    #to-accept-msg
        max-height initial 
        opacity 1
    #ethereum-address-adr
        max-height 0 
        opacity 0

    input#cb-notus
        &:checked
            & ~ label.no-us
                .box
                    background-color $BKG_DEFAULT
    input#cb-wp
        &:checked
            & ~ label.wp
                .box
                    background-color $BKG_DEFAULT

    input#cb-tos
        &:checked
            & ~ label.terms
                .box
                    background-color $BKG_DEFAULT
            & ~ input#cb-wp
                margin-left 10px
                &:checked
                    & ~ input#cb-notus
                        &:checked
                            & ~ #ethereum-address-copy
                                #ethereum-address-adr
                                    opacity 1
                                    max-height initial
                                #to-accept-msg
                                    opacity 0
                                    max-height 0