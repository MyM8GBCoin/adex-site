$BKG_DEFAULT=#1b75bc

.timeline
	list-style-type none
.li
	display inline-block
	width 20%
	transition all 200ms ease-in
	vertical-align top
	&.complete
		.status
			border-top 6px solid $BKG_DEFAULT
			&:before
				background-color $BKG_DEFAULT
				border none
				transition all 200ms ease-in
	&:first-child
		.timestamp, .status
			text-align left
			padding-left 0
		.status
			&:before
				left 0
	&:last-child
		.timestamp, .status
			text-align right
			padding-right 0	
			margin-right -10px				
		.status
			&:before
				left auto 
				right 0	
	.date
		color $BKG_DEFAULT

.timestamp
	margin-bottom 20px
	padding 0px 5px
	font-weight 100

.status
	padding 0px 40px
	border-top 6px solid #dbdbdb
	position relative
	transition all 200ms ease-in
	box-sizing border-box
	h4
		font-weight 600
	&:before
		content ""
		width 24px
		height 24px
		background-color $BKG_DEFAULT
		box-sizing border-box
		border 6px solid #dbdbdb
		position absolute
		top -15px
		left calc(50% - 12px)
		transition all 200ms ease-in
		transform rotate(45deg)
		transform-origin 50% 50%
	
$timeline-vertical-margin = 80px
@media screen and (max-width: 648px)
	.timeline
		width 140px
		margin auto
		.li
			height 120px
			width 100%
			display block
			text-align left !important
			.timestamp, .status
				display block
				margin 0
			.timestamp
				max-width 80px
				margin-left 40px !important
			.status
				margin-left 10px !important
				padding 0
				border-top 0
				h4
					padding-left 30px
					margin-top 0
				&:before
					left -12px !important
					z-index 2

				&:after
					content ''
					position absolute
					width 6px
					height 120px
					left -3px
					top -60px
					background-color #dbdbdb
					z-index 1
			&.complete
				.status
					border-top 0
					&:before					
						background-color $BKG_DEFAULT
						border none
						left -12px
					&:after
						background-color $BKG_DEFAULT					
			&:first-child		
				.status
					&:after
						height 60px
						top 0
			&:last-child
				.timestamp, .status
					text-align left
					padding-right 0	
					margin-right -10px				
				.status
					&:before
						left -12px	
						right auto
						bottom -5px
						z-index 2
					&:after
						bottom 12px
						top auto
						z-index 0